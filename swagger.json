{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger Hut",
    "license": {
      "name": "MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/reservations": {
      "get": {
        "description": "Returns all reservations",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A list reservations.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Reservation"
              }
            }
          }
        }
      },
      "post": {
        "description": "Adds a new reservation",
        "parameters": [
          {
            "name": "reservation",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Reservation"
            }
          }
        ]
      }
    },
    "/reservations/{id}": {
      "delete": {
        "description": "deletes a reservation by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of reservation to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "reservation deleted"
          }
        }
      }
    }
  },
  "definitions": {
    "Reservation": {
      "type": "object",
      "required": ["id", "reservingFrom", "reservingTo"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "reservingUser": {
          "type": "string"
        },
        "reservingFrom": {
          "type": "string"
        },
        "reservingTo": {
          "type": "string"
        }
      }
    }
  }
}
